<!DOCTYPE html>
<html>
  <head>
    <title>Usaptayo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |key, message| %>
          <div class="text-center alert-<%= key.to_s == 'success' ? 'success' : 'danger' %> ">
            <%= message %>
          </div>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
