<h3 class="text-center">New Article</h3>

<div class="row">
  <div class="col-md-12">
    <%= simple_form_for(@article, :html => { class: "form-horizontal" }) do |f| %>
      <% if @article.errors.any? %>
      <div class="card alert-danger">
        <div class="card-block">
          <h4 class="card-title">
            <%= pluralize(@article.errors.count, "error") %>
            prohibited this article from being saved:
          </h4>

          <div class="card-body">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <% end %>

      <%= f.input :title, label: false, placeholder: "Title of the article", focus: true %>
      <%= f.input :body,label: false, placeholder: "Content of the article" %>

      <%= f.submit "Create Article", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
